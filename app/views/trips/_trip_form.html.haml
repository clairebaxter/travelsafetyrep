- unless @trip.errors.empty?
  #warning
    Errors prevented this line from being #{controller.action_name}d:
    %ul
      - @trip.errors.full_messages.each do |error|
        %li= error

= label :trip, :train, 'Train'
= select :trip, :train, ['1', '2','3','4','5','6','7','A','C','E','B','D','G','J','F','L','N','Q','R','W','S']

= label :trip, :timestamps, 'Departure Time'
= datetime_select :trip, :timestamps, default: Time.now-6.hours+5.minutes, ampm: true,:style => "color:black;"