-# in app/views/trips/show.html.haml
%h2 Details about your train trip
%ul#details
  %li
    Passenger:
    = @trip.passenger_name
    %li
    Train:
    = @trip.train
    %li
    Departure Time:
    = @trip.timestamps
    %li
    Other Passengers on This Trip: 
    


%p= link_to 'Edit Trip', edit_trip_path(@trip),{:id => "link"}
%p= link_to 'Delete Trip', trip_path(@trip), {:method => :delete,:id => "link"}
%p= link_to 'Back to trips list', trips_path,{:id => "returnTripLink", :id => "link"}