<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body>

<div class="container">
  <%= grid(@trips_grid, show_filters: :always) do |g|
    
  g.row_attributes do |version|
    if version
      {style: 'background-color: #000025;'}
    end
  end
  
  g.blank_slate  do
    "There are no trips."
  end
  
  g.column name: 'Trip Creator', attribute: 'passenger_name' do |trip|
    trip.passenger_name
  end

  g.column name: 'Train', attribute: 'train', custom_filter: :auto do |trip|
    trip.train
  end
  
  g.column name: 'Time', attribute: 'timestamps', filter_type: :rails_datetime_helper do |trip|
    trip.timestamps
    
    
    #Time.now
  end
  
  g.column do |trip|
    link_to('More Info', trip_path(trip))
  end
 
end -%>

<button class="wg-external-submit-button" data-grid-name="grid">Submit</button>
<button class="wg-external-reset-button" data-grid-name="grid">Reset</button>
<a href = "/trips/new">New</a>
</div>

</body>
</html>