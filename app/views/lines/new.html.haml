%h2 Create New Line

= form_tag lines_path, :method => :post do
    = label :line, :train, 'Train'
    = text_field :line, :train
    
    = label :line, :color, 'Color'
    = select :line, :color, ['Blue', 'Brown', 'Gray', 'Green', 'Light Green', 'Orange', 'Yellow', 'Purple', 'Red']
    
    = label :line, :borough, 'Borough'
    = select :line, :borough, ['The Bronx','Brooklyn', 'Manhattan', 'Staten Island','Queens']
    
    = label :line, :description, 'Description'
    = text_field :line, :description
    
    = submit_tag 'Save Changes'
    
%p= link_to 'Back to lines list', lines_path,{:id => "returnLink", :id => "link"}