
%html
%head

<link rel="stylesheet" type="text/css" href="application.css">
%h1 URBAN PANCAKE
<src="app/assets/images/Slide1.jpg" alt="logo not here!" height="42" width="42">
%h2 NYC Train Lines

%table#lines
  %thead
    %tr
      %th ID
      %th Train
      %th Color
      %th Borough
    %tbody
      
      - @lines.each do |line|
        %tr
        %td= line.id
        %td= line.train
        %td= line.color
        %td= line.borough
        %td= link_to "More About The #{line.train}", line_path(line), {:id => "link"}
 
%p= link_to 'Add New Train', new_line_path, {:id => "link"}